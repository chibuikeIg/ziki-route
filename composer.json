{
    "name": "hng/ziki",
    "description": "A simple flat-file CMS powered by PHP, Markdown and Twig templates.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Hng Inerns",
            "email": "interns@hng.tech"
        }
    ],
    "require": {
        "monolog/monolog": "^1.24",
        "twig/twig": "^2.0",
        "symfony/finder": "^4.2",
        "kzykhys/yaml-front-matter": ">=1.0",
        "erusev/parsedown": "^1.7",
        "mnapoli/front-yaml": "^1.6"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Ziki\\": "src/"
        }
    }
}
